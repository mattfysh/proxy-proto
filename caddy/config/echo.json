{
  "logs": {
    "default": {
      "level": "DEBUG"
    }
  },
  "apps": {
    "layer4": {
      "servers": {
        "http-proxy": {
          "listen": ["0.0.0.0:80"],
          "routes": [
            {
              "match": [
                {
                  "http": []
                }
              ],
              "handle": [
                {
                  "handler": "proxy",
                  "upstreams": [{ "dial": ["{http.request.host}:80"] }]
                }
              ]
            }
          ]
        },
        "https-proxy": {
          "listen": ["0.0.0.0:443"],
          "routes": [
            {
              "match": [{ "tls": {} }],
              "handle": [
                {
                  "handler": "proxy",
                  "upstreams": [{ "dial": ["{http.request.host}:443"] }]
                }
              ]
            }
          ]
        }
      }
    }
  }
}
